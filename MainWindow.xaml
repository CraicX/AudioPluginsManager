<adonisControls:AdonisWindow x:Class="AudioPluginsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPluginsManager"
        xmlns:classes="clr-namespace:AudioPluginsManager.Classes"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        mc:Ignorable="d"
        Title="Audio Plugins Manager" Height="450" Width="800">
    <DockPanel Background="#22211E" >
        <StatusBar DockPanel.Dock="Bottom" Background="#2F2E2D">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="LblActive" Text="Active: 0" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2" >
                <TextBlock Name="LblDisabled" Text="Disabled: 0" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <TextBlock Name="LblStatus" Text="" />
            </StatusBarItem>
            <Separator Grid.Column="5" />
            <StatusBarItem Grid.Column="6">
                <ProgressBar Name="PBar" Value="0" Width="90" Height="16" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <Border Name="ToolBarPanelBorder" BorderThickness="1" BorderBrush="Black" Background="Aquamarine" DockPanel.Dock="Top">
                    <ToolBarTray Background="#2F2E2D" VerticalAlignment="Bottom" Height="36" >
                        <ToolBar Height="26" Background="#32312F" Margin="0,5,0,0">
                            <Button Background="#32312F" Padding="0" Width="32" Height="24">
                                <Image Source="Resources/img/t-vendor.png" />
                            </Button>
                            <Button Background="#32312F" Padding="0" Width="32" Height="24">
                                <Image Source="Resources/img/t-instruments.png" />
                            </Button>
                            <Button Background="#32312F" Padding="0" Width="32" Height="24">
                                <Image Source="Resources/img/t-fx.png" />
                            </Button>
                            <Separator Foreground="Black" Background="#111111" Margin="4,0,4,0" />
                            <TextBox Name="TBFilter" Height="22" Width="140" Background="#222222" BorderBrush="Black" BorderThickness="1" />

                        </ToolBar>
                    </ToolBarTray>
                </Border>

                <TreeView Name="TVVendor">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                            <Setter Property="Padding" Value="5,2,5,2" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type classes:Vendor}" ItemsSource="{Binding Plugins}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Image Source="{Binding Image}" Margin="0,0,5,0" -->
                                <TextBlock Text="{Binding Name}" Foreground="Beige" />
                                <TextBlock Text="   [ " Foreground="Coral" />
                                <TextBlock Text="{Binding Plugins.Count}" Foreground="Coral" />
                                <TextBlock Text=" ]" Foreground="Coral" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type classes:Plugin}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Image}" Margin="-25,0,5,0" />
                                <TextBlock Text="{Binding Name}" Foreground="LemonChiffon" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>

            </DockPanel>


            <StackPanel Grid.Column="1">
                <Border Height="{Binding TitleBarActualHeight, RelativeSource={RelativeSource AncestorType={x:Type adonisControls:AdonisWindow}}}" />
                <TextBlock Margin="{adonisUi:Space}"><Run Text="Main content"/></TextBlock>
            </StackPanel>
        </Grid>
    </DockPanel>
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
</adonisControls:AdonisWindow>
